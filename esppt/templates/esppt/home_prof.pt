<html metal:use-macro="load: ../apptemplate.pt">
<div metal:fill-slot="content">
 <script type='text/javascript'>
  $(document).ready(function () {
      $("#btn_save").click(function () {
          $.ajax({
              type: "POST",
              url: "/reg/prof_save",
              data: $("#myform").serialize(),
              success: function (html) {
                  if (html.success == true) {
                      $("#errors").css('display', 'inline', 'important');
                      $("#errors").html("<span class='glyphicon glyphicon-ok'></span> " + html.msg);
                  } else {
                      $("#errors").css('display', 'inline', 'important');
                      $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                  }
              },
              beforeSend: function () {
                  $("#errors").css('display', 'inline', 'important');
                  $("#errors").html("<img src=\'${request.static_url('esppt:static/images/ajax-loader.gif')}\' /> Loading...")
              }
          });
          return false;
      });

      $("#tgl_bayar").datepicker({dateFormat:'dd-mm-yy'});
  });
  </script>
  
    <div class="panel-body">
        <div class="page-header">
            <h1>Update Profile e-SPPT <small>Identitas</small></h1>
        </div>
        
        <div class="row">
            <div class="col-xs-12">
                <form method="post" accept-charset="utf-8" id="myform" class="form-horizontal" enctype="multipart/form-data">
                    <input class="form-control"  type="hidden" name="id" id="id" value="${rows and rows.id}">
                    <div class="form-group">
                        <label for="kode" class="control-label col-xs-2">NIK **</label>
                        <div class="col-xs-4">
                            <input class="form-control"  type="text" name="kode" id="kode" value="${rows and rows.kode}" disabled>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="nama" class="control-label col-xs-2">Nama **</label>
                        <div class="col-xs-4">
                            <input class="form-control"  type="text" name="nama" id="nama" value="${rows and rows.nama}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="alamat1" class="control-label col-xs-2">Alamat **</label>
                        <div class="col-xs-4">
                            <input class="form-control"  type="text" name="alamat1" id="alamat1" value="${rows and rows.alamat1}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="alamat2" class="control-label col-xs-2"></label>
                        <div class="col-xs-4">
                            <input class="form-control"  type="text" name="alamat2" id="alamat2" value="${rows and rows.alamat2}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="kelurahan" class="control-label col-xs-2">Kelurahan **</label>
                        <div class="col-xs-4">
                            <input class="form-control"  type="text" name="kelurahan" id="kelurahan" value="${rows and rows.kelurahan}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="kecamatan" class="control-label col-xs-2">Kecamatan **</label>
                        <div class="col-xs-4">
                            <input class="form-control"  type="text" name="kecamatan" id="kecamatan" value="${rows and rows.kecamatan}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="kabupaten" class="control-label col-xs-2">Kabupaten/Kota **</label>
                        <div class="col-xs-4">
                            <input class="form-control" type="text" name="kabupaten" id="kabupaten" value="${rows and rows.kabupaten}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="propinsi" class="control-label col-xs-2">Propinsi **</label>
                        <div class="col-xs-4">
                            <input class="form-control" type="text" name="propinsi" id="propinsi" value="${rows and rows.propinsi}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="no_hp" class="control-label col-xs-2">No. Handphone</label>
                        <div class="col-xs-4">
                            <input class="form-control" type="text" name="no_hp" id="no_hp" value="${rows and rows.no_hp}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="control-label col-xs-2">e-mail</label>
                        <div class="col-xs-4">
                            <input class="form-control" type="text" name="email" id="email" value="${rows and rows.email}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password1" class="control-label col-xs-2">Password</label>
                        <div class="col-xs-4">
                            <input class="form-control"  type="password" name="password1" id="password1" value="" placeholder="Password e-SPPT PBB dengan minimal 6 karakter">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password2" class="control-label col-xs-2">Konfirmasi</label>
                        <div class="col-xs-4">
                            <input class="form-control"  type="password" name="password2" id="password2" value="" placeholder="Masukan kembali password e-SPPT PBB">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password2" class="control-label col-xs-2">&nbsp;</label>
                        <div class="col-xs-4">
                            <label for="password2" class="control-label text-danger">** Data di Isi sesuai dengan yang tertera pada KTP</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-2">&nbsp;</label>
                        <div class="col-xs-4">
                            <button type="button" class="btn btn-primary" id="btn_save" name="btn_save">Simpan</button>
                            <button type="reset" class="btn btn-info" id="btn_cancel">Batal</button>
                            <!--button type="button" class="btn btn-info" id="btn_close">Tutup</button-->
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

</html>

