<html metal:use-macro="load: ../apptemplate.pt">

  <div metal:fill-slot="content">
    <script>
      var mID;
      var mThn;
      var oTable;
      var iPos;
      var oTableUrl = "/esppt/act/grid1";
      Number.prototype.formatMoney = function(decPlaces, thouSeparator, decSeparator) {
        var n = this,
            decPlaces = isNaN(decPlaces = Math.abs(decPlaces)) ? 2 : decPlaces,
            decSeparator = decSeparator == undefined ? "." : decSeparator,
            thouSeparator = thouSeparator == undefined ? "," : thouSeparator,
            sign = n < 0 ? "-" : "",
            i = parseInt(n = Math.abs(+n || 0).toFixed(decPlaces)) + "",
            j = (j = i.length) > 3 ? j % 3 : 0;
        return sign + (j ? i.substr(0, j) + thouSeparator : "") + i.substr(j).replace(/(\d{3})(?=\d)/g, "$1" + thouSeparator) + (decPlaces ? decSeparator + Math.abs(n - i).toFixed(decPlaces).slice(2) : "");
      };

        
      $(document).ready(function () {
        oTable = $('#table1').dataTable({
          "sDom": '<"toolbar">lfrtip',
          "sAjaxSource": oTableUrl,
          "bServerSide": true,
          "bProcessing": true,
          "bScrollCollapse": true,
          "bSort": true,
          "bInfo": false,
          "bFilter": false,
          "bAutoWidth": false,
          "bPaginate": true,
          "sPaginationType": "full_numbers",
          
          "lengthMenu": [
              [10, 25, 50, 0],
              [10, 25, 50, "All"]
          ],
          "aoColumnDefs": [],
          "aoColumns": [
              null,
              null,
              null,
              null,
              null,
              null,
              null,
              
          ]
        });
          
        var tb_array = [
          '<div class="btn-group pull-left">',
          '	<button id="btn_tambah" class="btn btn btn-primary" type="button">Tambah</button>',
          '	<button id="btn_delete" class="btn btn btn-danger" type="button">Hapus</button>',
          '	<button id="btn_profile" name="btn_profile" class="btn btn-primary" type="button">Profile</button>',
          '	&nbsp;',
          '</div>',
        ];

        var tb = tb_array.join(' ');
        $("div.toolbar").html(tb);
        $("div.toolbar").attr('style', 'display:block; float: left; margin-bottom:6px; line-height:16px;');

        
        $('#table1 tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            } else {
                iPos = oTable.fnGetPosition(this);
                var aData = oTable.fnGetData(iPos);
                //mID = aData[0];
                oTable.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
                mID = aData[0]+aData[1]+aData[2]+aData[3]+aData[4]+aData[5]+aData[6];
                        oTable.$('tr.row_selected').removeClass('row_selected');
                        $(this).addClass('row_selected');

                        oTable2.fnReloadAjax("esppt/act/grid2?id=" + mID);                
            }
        });
        
        $('#btn_tambah').click(function () {
            window.location = '/esppt/nop/add';
        });

        $('#btn_profile').click(function () {
            window.location = '/esppt/prof';
        });
        
        $('#btn_delete').click(function () {
                if (mID) {
                    var hapus = confirm('Hapus data ini?');
                    if (hapus == true) {
                        $.ajax({
                            type: "POST",
                            url: "/esppt/act/delete",
                            data: "id=" + mID,
                            success: function (html) {
                                if (html.success == true) {
                                    $("#errors").css('display', 'inline', 'important');
                                    $("#errors").html("<span class='glyphicon glyphicon-ok'></span> " + html.msg);
                                    var oTable = $('#table1').dataTable();
                                    oTable.fnDraw();
                                    //TODO: Redraw after delete
                                } else {
                                    $("#errors").css('display', 'inline', 'important');
                                    $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                                }
                            },
                            beforeSend: function () {
                                $("#errors").css('display', 'inline', 'important');
                                $("#errors").html("<img src=\'${request.static_url('esppt:static/images/ajax-loader.gif')}\' /> Loading...")
                            }
                        });
                        return false;
                    };
                } else {
                    alert('Silahkan pilih data yang akan dihapus');
                }
            });
        });
    </script>
    
    <script>
      $(document).ready(function () {
        oTable2 = $('#table2').dataTable({
            "sDom": '<"toolbar1">',
            "sAjaxSource": "/esppt/act/grid2",
            "bServerSide": true,
            "bProcessing": true,
            "bScrollCollapse": true,
            "bSort": true,
            "bInfo": false,
            "bFilter": false,
            "bAutoWidth": false,
            "bPaginate": false,
            "sPaginationType": "full_numbers",
            "lengthMenu": [
                [10, 25, 50, -1],
                [10, 25, 50, "All"]
            ],
            "aoColumnDefs": [],
            "aoColumns": [
                {"sWidth": "40pt"},
                null, 
                {
                  "sWidth": "150px", 
                  "sClass":"right"
                },
                {
                  "sWidth": "150px", 
                  "sClass":"right"},
                {
                  "sWidth": "150px", 
                  "sClass":"right"},
                {
                  "sWidth": "150px", 
                  "sClass":"right"}
            ]
        });
        /**********************************************************************
        DEFINE BUTTON TABLE 2
        **********************************************************************/
        var tb_array = [
            '<div class="btn-group pull-left">',
            '	<button id="btn_sppt" class="btn btn btn-primary" type="button">SPPT</button>',
            '	<button id="btn_stts" class="btn btn btn-danger" type="button">STTS</button>',
            '	<button id="btn_email" name="btn_email" class="btn btn-primary" type="button">e-mail</button>',
            '	<button id="btn_sms" name="btn_sms" class="btn btn-primary" type="button">SMS</button>',
            '	&nbsp;',
            '</div>',
        ];
    
        var tb = tb_array.join(' ');
        $("div.toolbar1").html(tb);

        $('#table2 tbody').on('click', 'tr', function () {
          if ($(this).hasClass('selected')) {
              $(this).removeClass('selected');
          } else {
            iPos = oTable2.fnGetPosition(this);
            var aData = oTable2.fnGetData(iPos);
            //mID = aData[0];
            oTable2.$('tr.selected').removeClass('selected');
            $(this).addClass('selected');
            mThn = aData[0];
            oTable.$('tr.row_selected').removeClass('row_selected');
            $(this).addClass('row_selected');
          }
        });
        
        /*******************************************************************
        * KIRIM SPPT VIA SMS
        *******************************************************************/
        $('#btn_sms').click(function () {
          if (mID && mThn) {
            var hapus = confirm('Kirim data ini?');
            if (hapus == true) {
                $.ajax({
                    type: "POST",
                    url: "/esppt/act/sms",
                    data: "id=" + mID+"&thn="+mThn,
                    success: function (html) {
                      if (html.success == true) {
                          $("#errors").css('display', 'inline', 'important');
                          $("#errors").html("<span class='glyphicon glyphicon-ok'></span> " + html.msg);
                          //TODO: Redraw after delete
                      } else {
                          $("#errors").css('display', 'inline', 'important');
                          $("#errors").html("<span class='glyphicon glyphicon-remove'></span> " + html.msg);
                      }
                    },
                    beforeSend: function () {
                        $("#errors").css('display', 'inline', 'important');
                        $("#errors").html("<img src=\'${request.static_url('esppt:static/images/ajax-loader.gif')}\' /> Loading...")
                    }
                });
                return false;
            };
          } else {
                alert('Silahkan pilih data terlebih dahulu');
          }
        });
      });
    </script>
    
    <div class="panel-body">
        <div class="page-header">
            <h1>Daftar NOP Teregistrasi</h1>
        </div>
        
        <div class="row">
            <div class="col-xs-4">
                <table id="table1" class="table table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Prop</th>
                            <th>Dat</th>
                            <th>Kec</th>
                            <th>Kel</th>
                            <th>Blok</th>
                            <th>Norut</th>
                            <th>Jns</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
            
            <div class="col-xs-8">
                <table id="table2" class="table table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Tahun</th>
                            <th>Nama</th>
                            <th>Tagihan</th>
                            <th>Denda</th>
                            <th>Bayar</th>
                            <th>Sisa</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

</html>

